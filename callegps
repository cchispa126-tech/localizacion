    <footer>
        <p>Esta aplicación utiliza la API de Geolocalización y OpenStreetMap para obtener direcciones.</p>
        <p>© 2023 Localizador GPS - Para uso educativo</p>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elementos del DOM
            const statusElement = document.getElementById('status');
            const latitudeElement = document.getElementById('latitude');
            const longitudeElement = document.getElementById('longitude');
            const addressElement = document.getElementById('address');
            const getLocationBtn = document.getElementById('getLocationBtn');
            const resetBtn = document.getElementById('resetBtn');
            const loadingElement = document.getElementById('loading');
            const errorElement = document.getElementById('error');
            const successElement = document.getElementById('success');
            const accuracyElement = document.getElementById('accuracy');
            
            // Variables para almacenar la ubicación
            let currentPosition = null;
            let watchId = null;
            
            // Evento para obtener ubicación
            getLocationBtn.addEventListener('click', getLocation);
            
            // Evento para reiniciar
            resetBtn.addEventListener('click', resetLocation);
            
            // Función para obtener la ubicación
            function getLocation() {
                // Mostrar estado de carga
                loadingElement.style.display = 'block';
                errorElement.style.display = 'none';
                successElement.style.display = 'none';
                statusElement.textContent = 'Obteniendo ubicación...';
                
                // Verificar si el navegador soporta geolocalización
                if (!navigator.geolocation) {
                    showError("Tu navegador no soporta la geolocalización.");
                    loadingElement.style.display = 'none';
                    return;
                }
                
                // Opciones para la geolocalización
                const options = {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                };
                
                // Intentar obtener la ubicación actual
                navigator.geolocation.getCurrentPosition(
                    // Éxito
                    function(position) {
                        loadingElement.style.display = 'none';
                        currentPosition = position;
                        updatePositionInfo(position);
                        getAddressFromCoordinates(position.coords.latitude, position.coords.longitude);
                        showSuccess("Ubicación obtenida correctamente.");
                        
                        // Iniciar seguimiento de posición
                        if (watchId) {
                            navigator.geolocation.clearWatch(watchId);
                        }
                        
                        watchId = navigator.geolocation.watchPosition(
                            updatePositionInfo,
                            showError,
                            options
                        );
                    },
                    // Error
                    function(error) {
                        loadingElement.style.display = 'none';
                        let errorMessage = "Error al obtener la ubicación: ";
                        
                        switch(error.code) {
                            case error.PERMISSION_DENIED:
                                errorMessage += "Permiso denegado. Por favor, permite el acceso a la ubicación en tu navegador.";
                                break;
                            case error.POSITION_UNAVAILABLE:
                                errorMessage += "La información de ubicación no está disponible.";
                                break;
                            case error.TIMEOUT:
                                errorMessage += "La solicitud de ubicación ha expirado.";
                                break;
                            default:
                                errorMessage += "Error desconocido.";
                        }
                        
                        showError(errorMessage);
                    },
                    options
                );
            }
            
            // Función para actualizar la información de posición
            function updatePositionInfo(position) {
                const coords = position.coords;
                
                // Actualizar coordenadas
                latitudeElement.textContent = coords.latitude.toFixed(6);
                longitudeElement.textContent = coords.longitude.toFixed(6);
                
                // Actualizar precisión
                accuracyElement.textContent = `Precisión: ${coords.accuracy ? Math.round(coords.accuracy) : 'N/A'} metros`;
                
                // Actualizar estado
                statusElement.textContent = 'Ubicación obtenida correctamente';
                statusElement.style.color = '#69f0ae';
                
                // Actualizar posición actual
                currentPosition = position;
            }
            
            // Función para obtener dirección a partir de coordenadas
            async function getAddressFromCoordinates(lat, lon) {
                try {
                    addressElement.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Obteniendo dirección...';
                    
                    // Usar Nominatim (OpenStreetMap) para geocodificación inversa
                    const response = await fetch(
                        `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lon}&zoom=18&addressdetails=1`
                    );
                    
                    if (!response.ok) {
                        throw new Error('Error al obtener la dirección');
                    }
                    
                    const data = await response.json();
                    
                    if (data && data.display_name) {
                        addressElement.textContent = data.display_name;
                    } else {
                        addressElement.textContent = "Dirección no disponible";
                    }
                } catch (error) {
                    console.error("Error al obtener dirección:", error);
                    addressElement.textContent = "No se pudo obtener la dirección. Verifica tu conexión a internet.";
                }
            }
            
            // Función para mostrar errores
            function showError(message) {
                errorElement.textContent = message;
                errorElement.style.display = 'block';
                statusElement.textContent = 'Error al obtener ubicación';
                statusElement.style.color = '#ff8a80';
            }
            
            // Función para mostrar éxito
            function showSuccess(message) {
                successElement.textContent = message;
                successElement.style.display = 'block';
            }
            
            // Función para reiniciar la ubicación
            function resetLocation() {
                if (watchId) {
                    navigator.geolocation.clearWatch(watchId);
                    watchId = null;
                }
                
                currentPosition = null;
                latitudeElement.textContent = '--';
                longitudeElement.textContent = '--';
                addressElement.textContent = 'La dirección aparecerá aquí después de obtener la ubicación.';
                statusElement.textContent = 'Esperando para obtener ubicación...';
                statusElement.style.color = '#ffffff';
                errorElement.style.display = 'none';
                successElement.style.display = 'none';
                accuracyElement.textContent = '';
                loadingElement.style.display = 'none';
            }
            
            // Intento automático de obtener ubicación al cargar la página
            getLocation();
        });
    </script>
</body>
</html>
