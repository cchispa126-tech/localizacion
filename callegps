<body>
    <div class="container">
        <h1><i class="fas fa-map-marker-alt"></i> GPS Móvil</h1>
        <p class="subtitle">Obtén tu ubicación exacta y dirección en tu dispositivo móvil</p>
        
        <div class="status-box">
            <i class="fas fa-sync-alt loading" id="loading-icon"></i>
            <span id="status-text" class="status-text">Presiona el botón para comenzar</span>
        </div>
        
        <div class="data-section">
            <div class="section-title"><i class="fas fa-satellite"></i> Coordenadas GPS</div>
            <div class="data-row">
                <span class="data-label">Latitud:</span>
                <span id="latitude" class="data-value">--</span>
            </div>
            <div class="data-row">
                <span class="data-label">Longitud:</span>
                <span id="longitude" class="data-value">--</span>
            </div>
            <div class="data-row">
                <span class="data-label">Precisión:</span>
                <span id="accuracy" class="data-value">--</span>
            </div>
        </div>
        
        <div class="data-section">
            <div class="section-title"><i class="fas fa-map-marked-alt"></i> Dirección</div>
            <div id="address">
                <div class="data-row">
                    <span class="data-label">Calle:</span>
                    <span id="street" class="data-value">--</span>
                </div>
                <div class="data-row">
                    <span class="data-label">Ciudad:</span>
                    <span id="city" class="data-value">--</span>
                </div>
                <div class="data-row">
                    <span class="data-label">País:</span>
                    <span id="country" class="data-value">--</span>
                </div>
            </div>
        </div>
        
        <div class="button-container">
            <button id="getLocationBtn" class="btn">
                <i class="fas fa-location-crosshairs" id="location-icon"></i>
                Obtener Mi Ubicación
            </button>
            
            <button id="watchLocationBtn" class="btn btn-secondary">
                <i class="fas fa-satellite-dish" id="watch-icon"></i>
                <span id="watch-text">Seguir en Tiempo Real</span>
            </button>
        </div>
        
        <a id="mapLink" class="map-link" href="#" target="_blank" style="display: none;">
            <i class="fas fa-map"></i>
            Ver en Google Maps
        </a>
        
        <div id="permission-help" class="permission-help">
            <h4><i class="fas fa-exclamation-triangle"></i> ¿Problemas con la ubicación?</h4>
            <p>1. Asegúrate de que el GPS esté activado en tu dispositivo</p>
            <p>2. Permite el acceso a la ubicación cuando el navegador lo solicite</p>
            <p>3. Si usas iOS, verifica Configuración > Privacidad > Ubicación</p>
        </div>
    </div>

    <script>
        // Detectar si es móvil
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        
        // Elementos del DOM
        const statusText = document.getElementById('status-text');
        const latitudeElement = document.getElementById('latitude');
        const longitudeElement = document.getElementById('longitude');
        const accuracyElement = document.getElementById('accuracy');
        const streetElement = document.getElementById('street');
        const cityElement = document.getElementById('city');
        const countryElement = document.getElementById('country');
        const getLocationBtn = document.getElementById('getLocationBtn');
        const watchLocationBtn = document.getElementById('watchLocationBtn');
        const mapLink = document.getElementById('mapLink');
        const loadingIcon = document.getElementById('loading-icon');
        const locationIcon = document.getElementById('location-icon');
        const watchIcon = document.getElementById('watch-icon');
        const watchText = document.getElementById('watch-text');
        const permissionHelp = document.getElementById('permission-help');
        
        // Variables de control
        let watchId = null;
        let isWatching = false;
        let lastPosition = null;
        
        // Mostrar ayuda para permisos en móviles
        if (isMobile) {
            setTimeout(() => {
                permissionHelp.classList.add('show');
            }, 3000);
        }
        
        // Actualizar estado
        function updateStatus(message, isError = false, isLoading = false) {
            statusText.textContent = message;
            
            if (isLoading) {
                loadingIcon.classList.add('active');
                statusText.style.color = '#bbdefb';
            } else {
                loadingIcon.classList.remove('active');
                
                if (isError) {
                    statusText.style.color = '#ff8a80';
                    permissionHelp.classList.add('show');
                } else {
                    statusText.style.color = '#c8e6c9';
                    permissionHelp.classList.remove('show');
                }
            }
        }
        
        // Función simplificada para obtener dirección
        async function getAddress(lat, lon) {
            try {
                // Usamos una API más simple y confiable
                const response = await fetch(
                    `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lon}&zoom=18&addressdetails=1`
                );
                
                if (!response.ok) {
                    throw new Error('Error en la API');
                }
                
                const data = await response.json();
                
                if (data && data.address) {
                    const addr = data.address;
                    
                    streetElement.textContent = addr.road || addr.pedestrian || '--';
                    cityElement.textContent = addr.city || addr.town || addr.village || '--';
                    countryElement.textContent = addr.country || '--';
                    
                    return true;
                }
                return false;
            } catch (error) {
                console.log('Error obteniendo dirección:', error);
                
                // Si falla, mostramos coordenadas como dirección
                streetElement.textContent = `Lat: ${lat.toFixed(6)}`;
                cityElement.textContent = `Lon: ${lon.toFixed(6)}`;
                countryElement.textContent = 'Usa Google Maps para dirección';
                
                return false;
            }
        }
        
        // Función principal para actualizar ubicación
        async function updateLocation(position) {
            const coords = position.coords;
            lastPosition = position;
            
            // Actualizar coordenadas
            latitudeElement.textContent = coords.latitude.toFixed(6);
            longitudeElement.textContent = coords.longitude.toFixed(6);
            accuracyElement.textContent = coords.accuracy ? `${Math.round(coords.accuracy)} m` : '--';
            
            // Obtener dirección
            updateStatus('Obteniendo dirección...', false, true);
            await getAddress(coords.latitude, coords.longitude);
            
            // Actualizar enlace a Google Maps
            mapLink.href = `https://maps.google.com/?q=${coords.latitude},${coords.longitude}`;
            mapLink.style.display = 'flex';
            
            // Actualizar estado
            updateStatus(isWatching ? 'Ubicación actualizada' : 'Ubicación obtenida');
            
            // Restaurar botones
            getLocationBtn.disabled = false;
            watchLocationBtn.disabled = false;
            locationIcon.className = 'fas fa-location-crosshairs';
        }
        
        // Manejar errores específicos para móviles
        function handleLocationError(error) {
            let errorMessage = 'Error desconocido';
            
            switch(error.code) {
                case 1: // PERMISSION_DENIED
                    errorMessage = 'Permiso denegado. En móvil, toca "Permitir" cuando el navegador lo solicite.';
                    break;
                case 2: // POSITION_UNAVAILABLE
                    errorMessage = 'Ubicación no disponible. Activa el GPS en tu dispositivo.';
                    break;
                case 3: // TIMEOUT
                    errorMessage = 'Tiempo agotado. Asegúrate de tener buena señal.';
                    break;
            }
            
            updateStatus(errorMessage, true);
            permissionHelp.classList.add('show');
            
            // Restaurar botones
            getLocationBtn.disabled = false;
            watchLocationBtn.disabled = false;
            locationIcon.className = 'fas fa-location-crosshairs';
            
            if (isWatching) {
                watchIcon.className = 'fas fa-satellite-dish';
                watchText.textContent = 'Seguir en Tiempo Real';
                isWatching = false;
            }
        }
        
        // Obtener ubicación (versión mejorada para móviles)
        function getLocation() {
            updateStatus(isMobile ? 'Solicitando permiso de ubicación...' : 'Obteniendo ubicación...', false, true);
            
            getLocationBtn.disabled = true;
            watchLocationBtn.disabled = true;
            locationIcon.className = 'fas fa-spinner fa-spin';
            
            if (!navigator.geolocation) {
                updateStatus('Tu navegador no soporta geolocalización', true);
                return;
            }
            
            // Opciones específicas para móviles
            const options = {
                enableHighAccuracy: true,
                timeout: isMobile ? 20000 : 15000, // Más tiempo en móviles
                maximumAge: 0
            };
            
            navigator.geolocation.getCurrentPosition(
                updateLocation,
                handleLocationError,
                options
            );
        }
        
        // Alternar seguimiento
        function toggleWatchLocation() {
            if (!isWatching) {
                // Iniciar seguimiento
                updateStatus('Iniciando seguimiento...', false, true);
                getLocationBtn.disabled = true;
                watchIcon.className = 'fas fa-spinner fa-spin';
                
                if (!navigator.geolocation) {
                    updateStatus('Geolocalización no disponible', true);
                    return;
                }
                
                const options = {
                    enableHighAccuracy: true,
                    timeout: 15000,
                    maximumAge: 0
                };
                
                watchId = navigator.geolocation.watchPosition(
                    updateLocation,
                    handleLocationError,
                    options
                );
                
                isWatching = true;
                watchText.textContent = 'Detener Seguimiento';
                watchIcon.className = 'fas fa-stop-circle';
                updateStatus('Seguimiento activo');
            } else {
                // Detener seguimiento
                if (watchId !== null) {
                    navigator.geolocation.clearWatch(watchId);
                    watchId = null;
                }
                
                isWatching = false;
                watchText.textContent = 'Seguir en Tiempo Real';
                watchIcon.className = 'fas fa-satellite-dish';
                updateStatus('Seguimiento detenido');
                getLocationBtn.disabled = false;
            }
        }
        
        // Intentar detectar automáticamente en móviles (solo una vez)
        if (isMobile) {
            setTimeout(() => {
                updateStatus('En móvil: Toca "Obtener Mi Ubicación" para comenzar');
            }, 1000);
        }
        
        // Event Listeners optimizados para móvil
        getLocationBtn.addEventListener('click', getLocation);
        getLocationBtn.addEventListener('touchstart', function(e) {
            e.preventDefault();
            this.style.transform = 'scale(0.98)';
        });
        getLocationBtn.addEventListener('touchend', function(e) {
            e.preventDefault();
            this.style.transform = '';
        });
        
        watchLocationBtn.addEventListener('click', toggleWatchLocation);
        watchLocationBtn.addEventListener('touchstart', function(e) {
            e.preventDefault();
            this.style.transform = 'scale(0.98)';
        });
        watchLocationBtn.addEventListener('touchend', function(e) {
            e.preventDefault();
            this.style.transform = '';
        });
        
        // Intentar obtener ubicación automáticamente si ya hay permisos
        window.addEventListener('load', function() {
            if (isMobile) {
                updateStatus('Listo para obtener ubicación en tu móvil');
            } else {
                updateStatus('Presiona el botón para obtener tu ubicación');
            }
        });
        
        // Manejar cambios en la visibilidad de la página (útil para móviles)
        document.addEventListener('visibilitychange', function() {
            if (document.hidden && isWatching) {
                updateStatus('Aplicación en segundo plano - seguimiento activo');
            }
        });
        
        // Limpiar al salir
        window.addEventListener('beforeunload', function() {
            if (watchId !== null) {
                navigator.geolocation.clearWatch(watchId);
            }
        });
    </script>
</body>
</html>
